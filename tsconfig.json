{
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "src",                                  
    "allowJs": true,                                 
    "declaration": true,                              
    "outDir": "dist",                                   
    "declarationDir": "dist/types",                         
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                 
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true
  },
  "include": ["src", "src/modules.d.ts"],
  "exclude": ["node_modules", "test"]
}
